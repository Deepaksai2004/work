import cv2
import numpy as np

# Load mask
mask = cv2.imread("/content/drive/MyDrive/Flagsoutput_masks/n1.png", cv2.IMREAD_GRAYSCALE)

# Threshold to binary
_, binary = cv2.threshold(mask, 127, 255, cv2.THRESH_BINARY)

# Find contours
contours, _ = cv2.findContours(binary, cv2.RETR_EXTERNAL, cv2.CHAIN_APPROX_SIMPLE)

# Create a blank black image
edges_only = np.zeros_like(mask)

# Draw contours in white
cv2.drawContours(edges_only, contours, -1, 255, 10)

# Save result
cv2.imwrite("edges_only.png", edges_only)
